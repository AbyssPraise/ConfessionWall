<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pl.confessionwall.UserMapper">
    <insert id="insert" useGeneratedKeys="true" keyProperty="uid" keyColumn="uid">
        insert into users(username, password) values(#{username},#{password})
    </insert>
    <delete id="deleteOneByUsername">
        delete from users where username = #{username}
    </delete>
    <select id="selectOneByUsername" resultType="com.pl.confessionwall.entity.User">
        select * from users where username = #{username}
    </select>
</mapper>